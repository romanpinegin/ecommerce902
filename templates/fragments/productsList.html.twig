{% for product in products %}
    <div class="col-md-6 col-lg-3">
        <div class="card" style="width: 18rem;">
            <img src="//placehold.it/200x150" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ product.name }}</h5>
                <a href="{{ path('product', {'id': product.id}) }}">{{ product.name }}</a>
                <p class="card-text">{{ (product.price|money) }}</p>
                <p class="card-text">{{ product.description }}</p>
                <a href="{{ path('order_add_to_cart', {'id': product.id}) }}"
                   class="btn btn-primary js-add-to-cart">В корзину</a>
            </div>
        </div>
    </div>
{% endfor %}