{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ product.name }}</h1>
    <p>Цена: {{ product.price / 100 }}</p>
    <div class="card-footer">
        {% if product.image and vich_uploader_asset(product, 'image') %}
            <img src="{{ vich_uploader_asset(product, 'image')|imagine_filter('product_thumb_01') }}" class="card-img-top" alt="...">
        {% else %}
            <img src="//placehold.it/200x150" class="card-img-top" alt="...">
        {% endif %}
        <a href="{{ path('order_add_to_cart', {id: product.id}) }}"
           class="btn btn-primary">Добавить в корзину</a>
    </div>


{% endblock %}

